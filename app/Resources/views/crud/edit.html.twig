{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
    <div class="row">
    <div class="col-md-6 offset-md-3">
    <h3 style="width: 980px; margin: auto; padding-bottom: 3%;">Добавление сотрудника</h3>
    <a href="/"><h5 style="width: 980px; margin: auto; padding-bottom: 3%;">Дерево сотрудников</h5></a>
        {% if worker.image != '' %}
            <img src="{{ asset('upload/images/' ~ worker.image) }}" width="250px" height="150px">

        {% endif %}
        <br>
        <br>
        <form method="post" action="{{ path("edit_worker",{id:worker.id}) }}" enctype="multipart/form-data">
        {{ form_widget(form) }}
        <input type="submit" value="Редактировать" />
    </form>
    </div>
    </div>
    </div>
{% endblock %}